{
	"name": "Netflix Custom Lists",
	"description": "Create your custom watchlists for Netflix",
	"version": "0.1",
	"manifest_version": 3,
	"action": {
		"default_icon": "images/icon.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["tabs", "storage", "unlimitedStorage"],
	"content_scripts": [
		{
			"js": ["scripts/watchlist-button.js"],
			"matches": ["https://www.netflix.com/*"]
		},
		{
			"js": ["scripts/add-to-watchlist.js"],
			"css": ["styles/watchlist-popup.css"],
			"matches": ["https://www.netflix.com/browse/*"]
		}
	]
}

{
	"name": "Netflix Custom Watchlists",
	"description": "Create your own custom watchlists for Netflix",
	"version": "0.1",
	"manifest_version": 3,
	"action": {
		"default_icon": "images/icon-128.png"
	},
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["storage", "unlimitedStorage"],
	"content_scripts": [
		{
			"js": ["scripts/watchlist-button.js"],
			"matches": ["https://www.netflix.com/*"]
		},
		{
			"js": ["scripts/add-to-watchlist.js"],
			"css": ["styles/watchlist-popup.css"],
			"matches": ["https://www.netflix.com/browse/*"]
		}
	]
}
